<!DOCTYPE html>
<html lang="es" dir="ltr">
  <head>
    {% metagen
    title = title,
    desc = meta_desc,
    url = url,
    img = url + img,
    img_alt = alt,
    twitter_card_type = cardType,
    twitter_handle = site.author.twitterHandle,
    name = site.author.firstName + " " + site.author.lastName,
    generator = "Eleventy v2.0.1",
    comments = true
 %}
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon_data/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon_data/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon_data/favicon-16x16.png">
    <link rel="manifest" href="/favicon_data/site.webmanifest">
    <link rel="stylesheet" href="/css/baguetteBox.min.css">
    {% set css %}
    {% include "css/style.css" %}
    {% include "css/reset.css" %}
    {% endset %}
    <style>
      {{css | cssmin | safe}}
    </style>

    <!-- Precarga de imágenes para la animación del footer -->
  <link rel="preload" href="/css/images/1.jpg" as="image">
  <link rel="preload" href="/css/images/2.jpg" as="image">
  <link rel="preload" href="/css/images/3.jpg" as="image">
  <link rel="preload" href="/css/images/4.jpg" as="image">
  <link rel="preload" href="/css/images/5.jpg" as="image">
  <link rel="preload" href="/css/images/6.jpg" as="image">
  <link rel="preload" href="/css/images/7.jpg" as="image">
  <link rel="preload" href="/css/images/8.jpg" as="image">
  <link rel="preload" href="/css/images/9.jpg" as="image">
  <link rel="preload" href="/css/images/10.jpg" as="image">
  <link rel="preload" href="/css/images/11.jpg" as="image">
  <link rel="preload" href="/css/images/12.jpg" as="image">
  </head>

  <body>
    {% include "partials/header.njk" %}
    {{ content | safe }}
    {% include "partials/footer.njk" %}

    <video autoplay muted loop id="bg-video">
      <source src="videos/bg-street-01.mp4" type="video/mp4">
    </video>

    <audio id="gearSound">
      <source src="/sounds/gear.mp3" type="audio/mpeg">
      <source src="/sounds/gear.ogg" type="audio/ogg">
    </audio>


    <audio id="gearSound" preload="auto" playsinline webkit-playsinline>
      <source src="/sounds/gear.mp3" type="audio/mpeg">
    </audio>


    <script src="/js/baguetteBox.min.js"></script>
    <script src="js/main.js"></script>
    <script src="/js/lightbox.js"></script>


  </body>
</html>